{
  "name": "Hebrew Text Simplification",
  "version": "1.1.1",
  "manifest_version": 2,
  "description": "Accessibility tool",

  "background": {
    "scripts": ["jquery.js","background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },

  "icons": { 
			"16": "logo.png",
           	"48": "logo.png",
          	"128": "logo.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "externally_connectable": {
    "matches": ["*://localhost/*"]
  },
  
  "content_scripts":
  [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js":  ["jquery.js", "actions.js"],
	  "css": ["style.css"]
    }
  ] 
}
